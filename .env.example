# .env
# Core API and Connection Configuration
# -----------------------------------------------------------------
# All SAGA settings use the SAGA_ prefix to avoid environment variable collisions.
# Ensure these point to your running LLM and Neo4j services.
SAGA_OPENAI_API_BASE="http://127.0.0.1:8080/v1"
SAGA_OPENAI_API_KEY="sk-nope"
SAGA_EMBEDDING_API_BASE="http://127.0.0.1:11434"
SAGA_EMBEDDING_API_KEY=""
SAGA_NEO4J_URI="bolt://localhost:7687"
SAGA_NEO4J_USER="neo4j"
SAGA_NEO4J_PASSWORD="saga_password"

# -----------------------------------------------------------------
# Model Assignments (Tiered for Optimal Performance & Quality)
# -----------------------------------------------------------------
# Base models available on your server.
SAGA_LARGE_MODEL="gemma3-12b"
SAGA_MEDIUM_MODEL="llama3.3-8b"
SAGA_SMALL_MODEL="qwen3-4b"
SAGA_NARRATIVE_MODEL="gemma3-12b"
SAGA_LLM_TOP_P=0.95

SAGA_EMBEDDING_MODEL="nomic-embed-text:latest"
SAGA_EXPECTED_EMBEDDING_DIM=768
SAGA_NEO4J_VECTOR_DIMENSIONS=768

# -----------------------------------------------------------------
# Generation & Revision Parameters
# -----------------------------------------------------------------
SAGA_CHAPTERS_PER_RUN=5
SAGA_TARGET_PLOT_POINTS_INITIAL_GENERATION=12
SAGA_MAX_CONTEXT_TOKENS=32768
SAGA_MAX_GENERATION_TOKENS=16384
SAGA_TARGET_SCENES_MIN=3
SAGA_TARGET_SCENES_MAX=5

# -----------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------
SAGA_LOG_LEVEL="INFO"
